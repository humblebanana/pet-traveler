.travel-plan {
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.time-slots {
  display: flex;
  justify-content: space-around;
  margin-bottom: 20rpx;
}

.time-slot {
  padding: 10rpx 20rpx;
  background-color: #e0e0e0;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.time-slot.active {
  background-color: #007AFF;
  color: white;
}

.location-cards {
  display: flex;
  flex-direction: column;
  margin-left: 40rpx;
  margin-top: 10rpx;
}

.location-card {
  background-color: white;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.location-image {
  width: 100%;
  height: 200rpx;
  object-fit: cover;
}

.location-info {
  padding: 10rpx;
}

.location-name {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 5rpx;
}

.location-address, .pet-friendly, .price {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 5rpx;
}

.swiper {
  height: 400rpx;
}

.swipe-indicators {
  display: flex;
  justify-content: center;
  margin-top: 10rpx;
}

.indicator {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: #ccc;
  margin: 0 5rpx;
}

.indicator.active {
  background-color: #1890ff;
}

.location-address {
  font-size: 24rpx;
  color: #666;
  margin-top: 5rpx;
}

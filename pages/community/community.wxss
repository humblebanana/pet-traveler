/* pages/community/community.wxss */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  padding: 0 20rpx;
  box-sizing: border-box;
  background-color: #f5f5f5;
  padding-top: 180rpx; /* 调整这个值以适应导航栏的高度 */
}

.waterfall {
  flex: 1;
  display: flex;
  padding-top: 20rpx;
}

.column {
  flex: 1;
  display: flex;
  flex-direction: column;
  margin: 0 10rpx;
}

.post-item {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.post-image {
  width: 100%;
  height: 400rpx; /* 增加图片高度 */
  object-fit: cover;
  border-top-left-radius: 16rpx;
  border-top-right-radius: 16rpx;
}

.post-content {
  padding: 16rpx;
}

.post-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
  color: #333;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.post-description {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 12rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.post-info {
  display: flex;
  align-items: center;
  margin-top: 12rpx;
}

.user-avatar {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  margin-right: 8rpx;
}

.user-name {
  font-size: 24rpx;
  color: #333;
  flex: 1;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.like-info {
  display: flex;
  align-items: center;
}

.like-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 4rpx;
}

.like-count {
  font-size: 24rpx;
  color: #666;
}

/* 社区页面样式 */

/* 容器样式 */
.container {
  height: 100vh; /* 设置容器高度为视口高度 */
  display: flex;
  flex-direction: column;
  padding: 0 20rpx;
  box-sizing: border-box;
  background-color: #f5f5f5; /* 设置背景色 */
  padding-top: 180rpx; /* 调整顶部内边距以适应导航栏的高度 */
}

/* 瀑布流布局 */
.waterfall {
  flex: 1;
  display: flex;
  padding-top: 20rpx;
}

/* 瀑布流列样式 */
.column {
  flex: 1;
  display: flex;
  flex-direction: column;
  margin: 0 10rpx;
}

/* 帖子项样式 */
.post-item {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1); /* 添加阴影效果 */
}

/* 帖子图片样式 */
.post-image {
  width: 100%;
  height: 600rpx; /* 设置图片高度 */
  object-fit: cover;
  border-top-left-radius: 16rpx;
  border-top-right-radius: 16rpx;
}

/* 帖子内容区域样式 */
.post-content {
  padding: 16rpx;
  background-color: #1a1a2b; /* 更改背景颜色 */
}

/* 帖子标题样式 */
.post-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
  color: #fff; /* 更改文字颜色为白色 */
  display: -webkit-box;
  -webkit-line-clamp: 2; /* 限制标题显示两行 */
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* 帖子描述样式 */
.post-description {
  font-size: 24rpx;
  color: #fff; /* 更改文字颜色为白色 */
  margin-bottom: 12rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2; /* 限制描述显示两行 */
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* 帖子信息区域样式 */
.post-info {
  display: flex;
  align-items: center;
  margin-top: 12rpx;
  color: #fff; /* 更改文字颜色为白色 */
}

/* 用户头像样式 */
.user-avatar {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  margin-right: 8rpx;
}

/* 用户名样式 */
.user-name {
  font-size: 24rpx;
  color: #fff; /* 更改文字颜色为白色 */
  flex: 1;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis; /* 超出部分显示省略号 */
}

/* 点赞信息样式 */
.like-info {
  display: flex;
  align-items: center;
}

/* 点赞图标样式 */
.like-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 4rpx;
}

/* 点赞数量样式 */
.like-count {
  font-size: 24rpx;
  color: #666;
}

/* pages/profile/profile.wxss */
.profile-container {
  padding: 20rpx;
  background-color: #fff;
  /* 移除固定的 margin-top */
}

/* 顶部个人信息区 */
.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.user-details {
  flex: 1;
}

.username-gender {
  display: flex;
  align-items: center;
}

.username {
  font-size: 36rpx;
  font-weight: bold;
  margin-right: 10rpx;
}

.gender-icon {
  width: 30rpx;
  height: 30rpx;
}

.edit-hint {
  font-size: 24rpx;
  color: #888;
}

/* 用户统计信息 */
.user-stats {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-number {
  font-size: 32rpx;
  font-weight: bold;
}

.stat-label {
  font-size: 24rpx;
  color: #888;
}

/* 日程区域 */
.schedule-section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
}

.date-tags {
  display: flex;
}

.date-tag {
  padding: 10rpx 20rpx;
  background-color: #f0f0f0;
  border-radius: 30rpx;
  font-size: 24rpx;
  margin-right: 15rpx;
}

/* 地图区域 */
.map-container {
  position: relative;
  height: 300rpx;
  border-radius: 15rpx;
  overflow: hidden;
}

.map-preview {
  width: 100%;
  height: 100%;
}

.map-markers {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.map-marker {
  position: absolute;
  padding: 5rpx 10rpx;
  border-radius: 15rpx;
  font-size: 20rpx;
  color: #fff;
}

.day1 {
  top: 50rpx;
  left: 50rpx;
  background-color: #4CAF50;
}

.day3 {
  top: 100rpx;
  left: 100rpx;
  background-color: #2196F3;
}

.view-map-hint {
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  font-size: 24rpx;
  color: #fff;
  background-color: rgba(0, 0, 0, 0.5);
  padding: 5rpx 10rpx;
  border-radius: 10rpx;
}

.map-card {
  margin-top: 20rpx;
  border-radius: 15rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  position: relative;
}

.map-image {
  width: 100%;
  height: 300rpx;
  display: block;
}

.map-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.map-marker {
  position: absolute;
  padding: 5rpx 10rpx;
  border-radius: 15rpx;
  font-size: 20rpx;
  color: #fff;
}

.day1 {
  top: 50rpx;
  left: 50rpx;
  background-color: #4CAF50;
}

.day3 {
  top: 100rpx;
  left: 100rpx;
  background-color: #2196F3;
}
